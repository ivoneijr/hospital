<h1>Listing medicos</h1>

<table>
  <thead>
    <tr>
      <th>Nome</th>
      <th>Crm</th>
      <th>Endereco</th>
      <th>Cidade</th>
      <th>Uf</th>
      <th>Telefone</th>
      <th>Email</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @medicos.each do |medico| %>
      <tr>
        <td><%= medico.nome %></td>
        <td><%= medico.crm %></td>
        <td><%= medico.endereco %></td>
        <td><%= medico.cidade %></td>
        <td><%= medico.uf %></td>
        <td><%= medico.telefone %></td>
        <td><%= medico.email %></td>
        <td><%= link_to 'Show', medico %></td>
        <td><%= link_to 'Edit', edit_medico_path(medico) %></td>
        <td><%= link_to 'Destroy', medico, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

